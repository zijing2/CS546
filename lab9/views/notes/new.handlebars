<div class="row">
    <div class="col-lg-12">
        <h1 style="padding-bottom: 9px;margin: 10px 0 20px;border-bottom: 1px solid #eee;">New Node</h1>
    </div>
    <div class="col-lg-12">
        <div class="alert alert-danger" style="display:none" id="form_submit_err" role="alert">
                <a href="#" class="alert-link"></a>
        </div>

        <form id="new_form">
            <div class="form-group">
                <label>Note title</label>
                <input type="text" class="form-control"  placeholder="Note title" id="note_title">
            </div>
           <div class="form-group">
                <label>Note due date</label>
                <div class="input-group date form_datetime timepick_width" data-date="2016-09-16T05:25:07Z" data-date-format="dd MM yyyy - HH:ii p" data-link-field="dtp_input1">
                  <input class="form-control" size="30" type="text" value=""  id="note_due_date" placeholder="2016-11-18 13:25:07">
                  <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
                 </div>
           </div>
            <div class="form-group">
                <label>Note summary</label>
                <input  class="form-control" id="note_summary" placeholder="Note summary, which can be formatted with HTML.">
            </div>
            <div class="form-group">
                <label>Note body</label>
                <textarea class="form-control" id="note_body" rows="3" placeholder="Note body, which can be formatted with HTML."></textarea>
            </div>
           
            <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
            </form>
            
    </div>
</div>

